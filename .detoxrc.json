{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "configurations": {
    "ios": {
      "type": "ios.simulator",
      "build": "xcodebuild -project ios/doctorpill_app.xcodeproj -UseNewBuildSystem=NO -scheme doctorpill_app -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/doctorpil_app.app",
      "device": {
        "type": "iPhone 11"
      }
    },
    "android": {
      "type": "android.emulator",
      "build": "cd android ; ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug ; cd -",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "device": {
        "avdName": "Pixel_3a_API_30_x86"
      }
    }
  }
}
